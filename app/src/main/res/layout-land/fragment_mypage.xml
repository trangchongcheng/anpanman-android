<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/img_orange_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_mypage_bgland"
    android:tag="mypage_landscape">
    <LinearLayout
        android:layout_weight="3"
        android:layout_marginLeft="@dimen/positive_35dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_user_icon"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/ic_user_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="@dimen/positive_30dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_user_id"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_18sp"
                android:layout_gravity="center"
                android:text="ID:000000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="visible"
                android:id="@+id/tv_user_name"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/positive_6dp"
                android:textSize="@dimen/text_size_28sp"
                android:layout_gravity="center"
                android:text="やまだ だろう"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_nickname"
                android:layout_marginTop="@dimen/positive_6dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>