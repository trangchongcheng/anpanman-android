<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style
        name="dialog_animation" >
        <item name="android:windowEnterAnimation">@anim/slide_enter_bottom_top</item>
        <item name="android:windowExitAnimation">@anim/slide_exit_top_bottom</item>
    </style>

</resources>
