<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/positive_20dp"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="center">

                <View
                    android:id="@+id/indicator_0"
                    android:layout_width="@dimen/positive_10dp"
                    android:layout_height="@dimen/positive_10dp"
                    android:background="@drawable/bg_view_pager_indicator" />

                <View
                    android:id="@+id/indicator_1"
                    android:layout_width="@dimen/positive_10dp"
                    android:layout_height="@dimen/positive_10dp"
                    android:layout_marginLeft="@dimen/positive_10dp"
                    android:layout_marginStart="@dimen/positive_10dp"
                    android:background="@drawable/bg_view_pager_indicator" />

                <View
                    android:id="@+id/indicator_2"
                    android:layout_width="@dimen/positive_10dp"
                    android:layout_height="@dimen/positive_10dp"
                    android:layout_marginLeft="@dimen/positive_10dp"
                    android:layout_marginStart="@dimen/positive_10dp"
                    android:background="@drawable/bg_view_pager_indicator" />

                <View
                    android:id="@+id/indicator_3"
                    android:layout_width="@dimen/positive_10dp"
                    android:layout_height="@dimen/positive_10dp"
                    android:layout_marginLeft="@dimen/positive_10dp"
                    android:layout_marginStart="@dimen/positive_10dp"
                    android:background="@drawable/bg_view_pager_indicator" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:background="@color/text_bottom_nav_inactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/positive_8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_term_use"
                android:text="@string/button_tutorial"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>