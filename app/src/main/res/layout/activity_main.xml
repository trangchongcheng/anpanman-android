<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top_nav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/positive_50dp">

            <ImageButton
                android:id="@+id/btn_img_hamburger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/positive_16dp"
                android:layout_marginStart="@dimen/positive_16dp"
                android:background="@drawable/bg_press_states"
                android:src="@drawable/combined_shape" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_orange" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorDivider" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/positive_50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bottom_nav_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/positive_16dp"
            android:paddingLeft="@dimen/positive_16dp"
            android:paddingRight="@dimen/positive_16dp"
            android:paddingStart="@dimen/positive_16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="@dimen/positive_50dp"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_img_tab_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/bg_state_anpanman" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_10sp"
                    android:duplicateParentState="true"
                    android:textColor="@color/text_bottom_nav_color_state"
                    android:text="@string/tab_news" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="@dimen/positive_50dp"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_img_tab_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/bg_state_coupon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_10sp"
                    android:duplicateParentState="true"
                    android:textColor="@color/text_bottom_nav_color_state"
                    android:text="@string/tab_coupon" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="@dimen/positive_50dp"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_img_tab_present"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/bg_state_present" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_10sp"
                    android:duplicateParentState="true"
                    android:textColor="@color/text_bottom_nav_color_state"
                    android:text="@string/tab_present" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="@dimen/positive_50dp"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_img_tab_my_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/bg_state_my_page" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_10sp"
                    android:duplicateParentState="true"
                    android:textColor="@color/text_bottom_nav_color_state"
                    android:text="@string/tab_my_page" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="@dimen/positive_50dp"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_img_tab_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/bg_state_other" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:textSize="@dimen/text_size_10sp"
                    android:textColor="@color/text_bottom_nav_color_state"
                    android:text="@string/tab_setting" />
            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:id="@+id/fl_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rl_bottom_nav"
            android:layout_below="@+id/rl_top_nav" />
    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/drawer_background">

        <ListView
            android:id="@+id/lv_drawer_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp" />
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>