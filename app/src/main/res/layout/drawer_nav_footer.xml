<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_drawer_nav_footer"/>
    <TextView
        android:textColor="@color/color_white"
        android:layout_marginLeft="@dimen/positive_30dp"
        android:layout_marginRight="@dimen/positive_30dp"
        android:layout_marginBottom="@dimen/positive_10dp"
        android:textSize="@dimen/text_size_8sp"
        android:gravity="center"
        android:text="@string/drawer_nav_footer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>