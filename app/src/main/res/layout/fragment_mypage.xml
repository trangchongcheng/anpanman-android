<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_user_icon"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/avator_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv_user_id"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/positive_10dp"
            android:text="ID:0000000000"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_user_name"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_28sp"
            android:layout_marginTop="@dimen/positive_10dp"
            android:text="やまだ たろう"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16sp"
            android:layout_marginLeft="@dimen/positive_20dp"
            android:layout_marginStart="@dimen/positive_20dp"
            android:layout_marginTop="@dimen/positive_30dp"
            android:text="@string/badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:weightSum="7"
            android:layout_margin="@dimen/positive_20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/badge1"
                android:layout_weight="1"
                android:src="@drawable/badge_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/badge2"
                android:layout_weight="1"
                android:src="@drawable/badge_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/badge3"
                android:layout_weight="1"
                android:src="@drawable/badge_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/badge4"
                android:layout_weight="1"
                android:src="@drawable/badge_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/badge5"
                android:layout_weight="1"
                android:src="@drawable/badge_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/badge6"
                android:layout_weight="1"
                android:src="@drawable/badge_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/badge7"
                android:layout_weight="1"
                android:src="@drawable/badge_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>